<h1> My blog</h1>
<% @posts.each do |post|%>
	<h2><%=post.title%></h2>
	<p><%=post.content%></p>
	<small><%=post.created_at%></small>
	 <p><%= link_to 'Show', post_path(post) %></p>
    <p><%= link_to 'Edit', edit_post_path(post) %></p>
    <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<%end%>	
<p>&nbsp;</p>
 <p><%= link_to 'New', new_post_path %></p>